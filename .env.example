# Weave MCP Server Environment Configuration
# Copy this file to .env and fill in your values

# Vector Database Configuration
# Options: weaviate-cloud, weaviate-local, supabase, qdrant, neo4j, pinecone,
#          opensearch, elasticsearch, mongodb, milvus, chroma, mock
VECTOR_DB_TYPE=weaviate-cloud

# ============================================
# Weaviate Cloud Configuration
# ============================================
WEAVIATE_URL=https://your-cluster-url.weaviate.network
WEAVIATE_API_KEY=your-weaviate-api-key

# OpenAI API Configuration (Required for Embeddings)
# Used by both Weaviate and Supabase for generating embeddings
# Popular models: text-embedding-3-small, text-embedding-3-large, text-embedding-ada-002
OPENAI_API_KEY=your-openai-api-key

# Collection Names (Weaviate)
WEAVIATE_COLLECTION=WeaveDocs
WEAVIATE_COLLECTION_IMAGES=WeaveImages

# ============================================
# Supabase Configuration (Optional)
# ============================================
# Uncomment and fill in if using Supabase
# SUPABASE_URL=https://xxx.supabase.co
# SUPABASE_DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxx.supabase.co:5432/postgres
# SUPABASE_SERVICE_KEY=your-supabase-service-role-key
# SUPABASE_COLLECTION=WeaveDocs
# SUPABASE_COLLECTION_IMAGES=WeaveImages

# ============================================
# MongoDB Configuration (Optional)
# ============================================
# Uncomment and fill in if using MongoDB Atlas Vector Search
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
# MONGODB_DATABASE=your-database-name
# MONGODB_COLLECTION=WeaveDocs
# MONGODB_COLLECTION_IMAGES=WeaveImages

# ============================================
# Milvus Configuration (Optional)
# ============================================
# Uncomment and fill in if using Milvus (local or cloud)
# MILVUS_HOST=localhost
# MILVUS_PORT=19530
# MILVUS_API_KEY=your-milvus-cloud-api-key
# MILVUS_COLLECTION=WeaveDocs
# MILVUS_COLLECTION_IMAGES=WeaveImages

# ============================================
# Chroma Configuration (Optional)
# ============================================
# Uncomment and fill in if using Chroma (local or cloud)
# Note: Chroma is not supported on Windows due to CGO dependencies
# CHROMA_URL=http://localhost:8000
# CHROMA_API_KEY=your-chroma-cloud-api-key
# CHROMA_COLLECTION=WeaveDocs
# CHROMA_COLLECTION_IMAGES=WeaveImages

# ============================================
# Qdrant Configuration (Optional)
# ============================================
# Uncomment and fill in if using Qdrant (local or cloud)
# QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=your-qdrant-cloud-api-key
# QDRANT_COLLECTION=WeaveDocs
# QDRANT_COLLECTION_IMAGES=WeaveImages

# ============================================
# Neo4j Configuration (Optional)
# ============================================
# Uncomment and fill in if using Neo4j (local or Aura cloud)
# NEO4J_URI=bolt://localhost:7687
# NEO4J_USERNAME=neo4j
# NEO4J_PASSWORD=your-password
# NEO4J_COLLECTION=WeaveDocs
# NEO4J_COLLECTION_IMAGES=WeaveImages

# ============================================
# Pinecone Configuration (Optional)
# ============================================
# Uncomment and fill in if using Pinecone (cloud only)
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=us-east1-gcp
# PINECONE_COLLECTION=WeaveDocs
# PINECONE_COLLECTION_IMAGES=WeaveImages

# ============================================
# OpenSearch Configuration (Optional) - BETA
# ============================================
# Uncomment and fill in if using OpenSearch (local or AWS managed)
# Note: Beta status, requires 2GB+ RAM
# OPENSEARCH_URL=http://localhost:9200
# OPENSEARCH_USERNAME=admin
# OPENSEARCH_PASSWORD=admin
# OPENSEARCH_COLLECTION=WeaveDocs
# OPENSEARCH_COLLECTION_IMAGES=WeaveImages

# ============================================
# Elasticsearch Configuration (Optional) - BETA
# ============================================
# Uncomment and fill in if using Elasticsearch (local or cloud)
# Note: Beta status, requires 2GB+ RAM
# ELASTICSEARCH_URL=http://localhost:9200
# ELASTICSEARCH_API_KEY=your-api-key
# ELASTICSEARCH_COLLECTION=WeaveDocs
# ELASTICSEARCH_COLLECTION_IMAGES=WeaveImages

# ============================================
# MCP Server Configuration
# ============================================
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8030

# ============================================
# Test Collections (for integration tests)
# ============================================
WEAVIATE_COLLECTION_TEST=WeaveMcpDocs
WEAVIATE_COLLECTION_TEST_IMAGES=WeaveMcpImages